{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  },

  "AppSettingsOptions": {
    /* it can be in the following formats:
     * LinkToRepoWithFile: "https://github.com/vertigra/Services.Managment/blob/master/services_urls.json" - correct format
     * LinkToRepo: "https://github.com/vertigra/Services.Managment" - incorrect format, default paths 'blob/master/service_info.json' will be added to it.
     * LinkToRawFiles: "https://raw.githubusercontent.com/vertigra/Services.Managment/refs/heads/master/services_urls.json" - correct format
     */
    "CheckUpdateUrl": "https://github.com/vertigra/Services.Managment/blob/master/services_urls.json",
    "JsonRepositoryPath": "jsonRepository"
  }
}